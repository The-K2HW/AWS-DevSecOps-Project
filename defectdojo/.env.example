# ============================================
# DEFECTDOJO CONFIGURATION TEMPLATE
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# ADMIN CREDENTIALS
# ============================================
DD_ADMIN_USER=admin
DD_ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DD_ADMIN_MAIL=admin@example.com

# ============================================
# DATABASE
# ============================================
DD_DATABASE_URL=postgresql://defectdojo:defectdojo@postgres:5432/defectdojo

# ============================================
# REDIS
# ============================================
DD_CELERY_BROKER_URL=redis://redis:6379/0

# ============================================
# SITE CONFIGURATION
# ============================================
DD_ALLOWED_HOSTS=*
DD_SITE_URL=http://YOUR_IP_OR_DOMAIN
DD_DEBUG=False

# ============================================
# SECURITY (Generate new keys!)
# ============================================
# Generate with: openssl rand -base64 64
DD_SECRET_KEY=GENERATE_NEW_SECRET_KEY

# Generate with: openssl rand -base64 32
DD_CREDENTIAL_AES_256_KEY=GENERATE_NEW_AES_KEY

# ============================================
# SESSION & COOKIES
# ============================================
DD_SESSION_COOKIE_HTTPONLY=True
DD_CSRF_COOKIE_HTTPONLY=True
DD_SECURE_BROWSER_XSS_FILTER=True
DD_SECURE_CONTENT_TYPE_NOSNIFF=True

# ============================================
# SSL/TLS (Enable in production)
# ============================================
DD_SECURE_SSL_REDIRECT=False
DD_SESSION_COOKIE_SECURE=False
DD_CSRF_COOKIE_SECURE=False

# ============================================
# EMAIL (Optional)
# ============================================
DD_EMAIL_URL=smtp://smtp.gmail.com:587
DD_EMAIL_FROM=noreply@example.com
