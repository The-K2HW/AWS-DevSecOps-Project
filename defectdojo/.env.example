# ============================================
# DEFECTDOJO CONFIGURATION TEMPLATE
# ============================================
# Copy this file to .env and fill in your secret values.
# NEVER COMMIT YOUR .env FILE TO GIT!

# ============================================
# SITE AND ADMIN CONFIGURATION
# ============================================
DD_PORT=8080
DD_HOST=http://localhost:8080
DD_ALLOWED_HOSTS=localhost,127.0.0.1,your_domain.com
DD_ADMIN_EMAIL=admin@example.com
DD_ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# ============================================
# DATABASE AND SERVICE SECRETS
# ============================================
DD_DATABASE_PASSWORD=CHANGE_ME_DB_PASSWORD
DD_RABBITMQ_PASSWORD=CHANGE_ME_RABBITMQ_PASSWORD

# ============================================
# SECURITY KEYS (Generate new keys!)
# ============================================
# Generate with: openssl rand -base64 64
DD_SECRET_KEY=GENERATE_NEW_SECRET_KEY

# Generate with: openssl rand -base64 32
DD_CREDENTIAL_AES_256_KEY=GENERATE_NEW_AES_KEY

# ============================================
# API 
# ============================================
# You can generate this from the DefectDojo UI after installation
DD_API_TOKEN=PLACEHOLDER_API_TOKEN_IF_NEEDED
